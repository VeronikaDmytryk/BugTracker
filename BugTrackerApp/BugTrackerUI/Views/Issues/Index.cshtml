@model IEnumerable<BugTrackerApp.Issue>

@{
    ViewBag.Title = "Tasks";
}

<h2>Tasks</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueAssignee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueDate)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <i class="@Html.DisplayFor(modelItem => item.IssueLabel)"></i>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IssueTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IssueDescription)
        </td>
        <td>
            <div class="@Html.DisplayFor(modelItem => item.IssueStatus)">@Html.DisplayFor(modelItem => item.IssueStatus)</div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IssueAssignee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IssueDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IssueId, projectId = item.ProjectId }, null) |
            @Html.ActionLink("Details", "Details", new { id = item.IssueId, projectId = item.ProjectId }, null) |
            @Html.ActionLink("Comments", "Index", "Comments", new { id = item.IssueId }, null) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IssueId, projectId = item.ProjectId }, null)
        </td>
    </tr>
}

</table>
