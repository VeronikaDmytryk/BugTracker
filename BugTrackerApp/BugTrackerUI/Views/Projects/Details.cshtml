@model BugTrackerApp.Project

@{
    ViewBag.Title = "Details";
}

<h2>Project Details</h2>

<div>
    <table class="table">
        <tr>
            <td>Title</td>
            <td>@Html.DisplayFor(model => model.ProjectTitle)</td>
        </tr>
        <tr>
            <td>Description</td>
            <td>@Html.DisplayFor(model => model.ProjectDescription)</td>
        </tr>
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProjectId }) |
